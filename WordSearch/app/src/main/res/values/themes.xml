<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WordSearch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorAccent</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorForeground</item>
    </style>

    <style name="style_table4x4">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@color/teal_200</item>
    </style>

    <style name="style_table6x7">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@color/teal_200</item>
    </style>

    <style name="style_table10x10">
        <item name="android:layout_width">39dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@color/teal_200</item>
    </style>

    <style name="style_table8x9">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@color/teal_200</item>
    </style>
</resources>